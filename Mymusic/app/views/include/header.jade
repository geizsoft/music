nav.navbar.navbar-inverse.navbar-fixed-top
	div.container-fluid
		div.navbar-header
			button.navbar-toggle.collapsed(type="button",data-toggle="collapsed",data-target="#navbar",aria-expanded="false",aria-controls="navbar")
				span.sr-only music
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href="/") 
				span.glyphicon.glyphicon-star-empty  music
		div#navbar.navbar-collapse.collapse
			ul.nav.navbar-nav.left
				li
					a(href="/")
						span.glyphicon.glyphicon-home  首页
				li
					a(href="/all") 所有音乐
				//- li
					a(href="#aboutWeb") 关于网站
				li
					a(href="/upload/music") 上传音乐
			ul.nav.navbar-nav.navbar-right
				if user
					li
						a(href="/user/userPage",target="_black")
							img.img-circle(src="#{user.img}" style="width:30px;height:30px;margin-top:-8px;")
							span #{user.name}

					//- li
					//- 	a(href="/user/userPage",target="_black") #{user.name}
					li
						a.navbar-link.glyphicon.glyphicon-off(href="/logout") 
							span 退出
				else
					if !login&&!sign
						li
							a(href="#",data-toggle="modal",data-target="#signInModal") 登录
						li
							a(href="/user/sign",target="_black") 注册
					//- else if !login&&sign
					//- 	li
					//- 		a.navbar-link(href="/user/sign",target="_black") 注册
			form.navbar-form.navbar-right#search(method="GET",action="/results")
				input.form-control(type="text" placeholder="搜索...",name="q" style='border-radius:5px 0px 0px 5px;')
				button.btn.btn-success(type="submit" style="outline:none;border-radius:0px 5px 5px 0px;") 搜索
if !login 
	div#signInModal.modal.fade
		.modal-dialog
			.modal-content
				form.form-horizontal(method="POST",action="/user/login")
					.modal-header 登录
					.modal-body
						.form-group
							label.col-sm-3.control-label(for="loginName") 用户名
							.col-sm-6
								input#loginName.form-control(name="user[name]",type="text")
						.form-group
							label.col-sm-3.control-label(for="loginPassword") 密码
							.col-sm-6
								input#loginPassword.form-control(name="user[password]",type="password")
						.form-group
							label.col-sm-3.control-label(for="CAPTCHA") 验证码
							.col-sm-3
								input#CAPTCHA.form-control(name="" type="text" placeholder="请输入验证码")
							.col-sm-2
								.code#checkCAP.bg-success.text-center
							.col-sm-3
								a(href="#",onclick="createCAP()") 看不清换一张
						.form-group
							.col-sm-offset-7
								a(href="/user/forgetpwd") 忘记密码

					.modal-footer
						button.btn.btn-default#reset(type="button",data-dismiss="modal") 取消
						button.btn.btn-success#userSend(type="submit",onclick="verify()") 确认
	script(src="/js/captcha.js")

	

	



