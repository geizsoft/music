extends ../../layout

block content
	head
		link(href="/css/pwdPage.css",type="text/css",rel="stylesheet")

	.container#menu
		.col-sm-2
		form.form-horizontal.col-sm-8#userName
			.form-group
				label.col-sm-2.control-lable 请输入用户名
				.col-sm-5
					input.form-control(type="text",name="user[name]")
			.form-group
				.col-sm-offset-2.col-sm-2
					button.btn.btn-success(type="button",id="submitName") 下一步
		
		form.form-horizontal.col-sm-10.col-sm-offset-2#useremail(style="display:none;")
			.form-group
				label.col-sm-2.control-lable 请输入邮箱
				.col-sm-5
					input.form-control(type="email" name="user[email]")
			.form-group
				.col-sm-offset-2.col-sm-2
					button.btn.btn-success(type="button" id="submitemail") 发送验证码

		form.form-horizontal.col-sm-10.col-sm-offset-2#usercode(style="display:none;")
			.form-group
				label.col-sm-2.control-lable 请输入验证码
				.col-sm-5
					input.form-control(type="text" name="user[code]")
			.form-group
				.col-sm-offset-2.col-sm-2
					button.btn.btn-success(type="button" id="submitemail") 下一步

		form.form-horizontal.col-sm-10.col-sm-offset-2#userPWD(style="display:none;")
			.form-group
				label.col-sm-2.control-lable 请输入密码
				.col-sm-5
					input.form-control(type="password" name="user[pwd]")
			.form-group
				.col-sm-offset-2.col-sm-2
					button.btn.btn-success(type="button" id="submitPwd") 确认
	script(src="/js/forget.js")
